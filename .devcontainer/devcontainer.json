{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "ghcr.io/astral-sh/uv:python3.12-alpine",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "charliermarsh.ruff"
      ]
    }
  },
  "updateContentCommand": "uv sync; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "uv run streamlit run app.py"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}